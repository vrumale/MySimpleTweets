<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:padding="10dp"
    android:paddingLeft="10dp"
    android:paddingTop="10dp"
    android:paddingRight="10dp"
    android:paddingBottom="10dp">

    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/ivProfileImage"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:paddingRight="5dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Billy"
        android:textStyle="bold"
        android:textSize="12dp"
        android:id="@+id/tvUserNAME"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/ivProfileImage"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Billy"
        android:id="@+id/tvScreenNAME"
        android:layout_below="@+id/tvUserNAME"
        android:layout_toRightOf="@+id/ivProfileImage"/>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:id="@+id/tvBody"
        android:layout_below="@+id/tvScreenNAME"
        android:layout_alignParentEnd="@+id/tvUserNAME"
        android:layout_alignParentRight="@+id/tvUserNAME"
        android:gravity="bottom"
        android:layout_toRightOf="@+id/ivProfileImage"
        android:layout_toEndOf="@+id/tvUserNAME"
        android:linksClickable="true"
        android:autoLink="all"/>




    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Time"
        android:id="@+id/tvCreatedTime"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />
</RelativeLayout><!-- From: file:/C:/Users/vrumale/Documents/android-rest-client-template-master/MySimpleTweets/app/src/main/res/layout/item_tweet.xml -->